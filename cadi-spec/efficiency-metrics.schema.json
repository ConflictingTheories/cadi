{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cadi.dev/schemas/efficiency-metrics.schema.json",
  "title": "Efficiency Metrics Schema",
  "description": "Track token efficiency, energy usage, and sustainability metrics",
  "type": "object",
  "required": ["metrics_id", "recorded_at", "subject"],
  "properties": {
    "metrics_id": {
      "type": "string",
      "pattern": "^metrics:sha256:[a-f0-9]{64}$",
      "description": "Content-addressed metrics identifier"
    },
    "subject": {
      "type": "object",
      "properties": {
        "chunk_id": {
          "type": ["string", "null"],
          "description": "Chunk ID if metrics are for a chunk"
        },
        "manifest_id": {
          "type": ["string", "null"],
          "description": "Manifest ID if metrics are for a manifest"
        },
        "operation": {
          "type": "string",
          "enum": ["build", "fetch", "search", "reuse", "import", "publish"],
          "description": "Operation type"
        }
      }
    },
    "recorded_at": {
      "type": "string",
      "format": "date-time",
      "description": "When metrics were recorded"
    },
    "context": {
      "type": "object",
      "properties": {
        "user_id": {
          "type": ["string", "null"],
          "description": "Anonymized user ID"
        },
        "session_id": {
          "type": ["string", "null"],
          "description": "Session ID"
        },
        "platform": {
          "type": "string",
          "description": "Platform triple"
        }
      }
    },
    "reuse": {
      "type": "object",
      "properties": {
        "chunk_reuse_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Times this chunk was reused"
        },
        "bytes_deduplicated": {
          "type": "integer",
          "minimum": 0,
          "description": "Bytes saved via content-addressing"
        },
        "vs_regeneration": {
          "type": "object",
          "properties": {
            "estimated_tokens_if_regenerated": {
              "type": "integer",
              "minimum": 0,
              "description": "Estimated tokens if regenerated by LLM"
            },
            "actual_tokens_used": {
              "type": "integer",
              "minimum": 0,
              "description": "Actual tokens used"
            },
            "tokens_saved": {
              "type": "integer",
              "description": "Net tokens saved"
            },
            "savings_percentage": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "Percentage savings"
            }
          }
        },
        "vs_traditional": {
          "type": "object",
          "properties": {
            "estimated_download_size_traditional": {
              "type": "integer",
              "minimum": 0,
              "description": "Estimated traditional package size"
            },
            "actual_download_size_cadi": {
              "type": "integer",
              "minimum": 0,
              "description": "Actual CADI download size"
            },
            "bandwidth_saved": {
              "type": "integer",
              "description": "Bandwidth saved in bytes"
            }
          }
        }
      },
      "description": "Reuse and deduplication metrics"
    },
    "llm_efficiency": {
      "type": "object",
      "properties": {
        "context_tokens_used": {
          "type": "integer",
          "minimum": 0,
          "description": "Tokens used in context"
        },
        "context_tokens_available": {
          "type": "integer",
          "minimum": 0,
          "description": "Total tokens available"
        },
        "context_utilization": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Context utilization ratio"
        },
        "summary_tokens": {
          "type": "integer",
          "minimum": 0,
          "description": "Tokens in chunk summary"
        },
        "full_source_tokens": {
          "type": "integer",
          "minimum": 0,
          "description": "Tokens if full source used"
        },
        "compression_ratio": {
          "type": "number",
          "minimum": 0,
          "description": "Compression ratio"
        },
        "search_queries": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of search queries"
        },
        "chunks_examined": {
          "type": "integer",
          "minimum": 0,
          "description": "Chunks examined during search"
        },
        "chunks_selected": {
          "type": "integer",
          "minimum": 0,
          "description": "Chunks selected from search"
        },
        "precision": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Search precision"
        }
      },
      "description": "LLM interaction efficiency metrics"
    },
    "build": {
      "type": "object",
      "properties": {
        "cpu_seconds": {
          "type": "number",
          "minimum": 0,
          "description": "CPU time used"
        },
        "memory_peak_mb": {
          "type": "integer",
          "minimum": 0,
          "description": "Peak memory usage in MB"
        },
        "wall_clock_seconds": {
          "type": "number",
          "minimum": 0,
          "description": "Wall clock time"
        },
        "cache_hits": {
          "type": "integer",
          "minimum": 0,
          "description": "Cache hits"
        },
        "cache_misses": {
          "type": "integer",
          "minimum": 0,
          "description": "Cache misses"
        },
        "cache_hit_rate": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Cache hit rate"
        },
        "full_build_time_seconds": {
          "type": ["number", "null"],
          "minimum": 0,
          "description": "Full build time if known"
        },
        "incremental_build_time_seconds": {
          "type": "number",
          "minimum": 0,
          "description": "Incremental build time"
        },
        "time_saved_seconds": {
          "type": "number",
          "description": "Time saved via caching"
        }
      },
      "description": "Build and transformation costs"
    },
    "energy": {
      "type": "object",
      "properties": {
        "estimated_kwh": {
          "type": "number",
          "minimum": 0,
          "description": "Estimated energy usage in kWh"
        },
        "carbon_intensity_region": {
          "type": ["string", "null"],
          "description": "Carbon intensity region"
        },
        "estimated_co2_grams": {
          "type": ["number", "null"],
          "minimum": 0,
          "description": "Estimated CO2 emissions in grams"
        },
        "methodology": {
          "type": "string",
          "description": "How estimates were calculated"
        },
        "confidence": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "description": "Estimation confidence"
        }
      },
      "description": "Energy estimation metrics"
    },
    "aggregated": {
      "type": "object",
      "properties": {
        "period": {
          "type": "string",
          "enum": ["hourly", "daily", "weekly", "monthly"],
          "description": "Aggregation period"
        },
        "period_start": {
          "type": "string",
          "format": "date-time"
        },
        "period_end": {
          "type": "string",
          "format": "date-time"
        },
        "total_chunks_served": {
          "type": "integer",
          "minimum": 0
        },
        "total_bytes_transferred": {
          "type": "integer",
          "minimum": 0
        },
        "total_bytes_deduplicated": {
          "type": "integer",
          "minimum": 0
        },
        "unique_users": {
          "type": "integer",
          "minimum": 0
        },
        "top_reused_chunks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "chunk_id": {"type": "string"},
              "reuse_count": {"type": "integer"}
            }
          }
        },
        "estimated_total_tokens_saved": {
          "type": "integer",
          "minimum": 0
        },
        "estimated_total_energy_saved_kwh": {
          "type": "number",
          "minimum": 0
        }
      },
      "description": "Aggregated statistics for registry-level reporting"
    }
  }
}
