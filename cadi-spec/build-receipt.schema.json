{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cadi.dev/schemas/build-receipt.schema.json",
  "title": "Build Receipt Schema",
  "description": "Schema for build receipts - provenance records for reproducible verification",
  "type": "object",
  "required": ["build_receipt_id", "builder", "timestamp", "steps"],
  "properties": {
    "build_receipt_id": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$",
      "description": "Content-addressed receipt identifier"
    },
    "source_cadi": {
      "type": ["string", "null"],
      "description": "Source chunk ID if applicable"
    },
    "ir_cadi": {
      "type": ["string", "null"],
      "description": "IR chunk ID if applicable"
    },
    "blob_cadi": {
      "type": ["string", "null"],
      "description": "Blob chunk ID if applicable"
    },
    "container_cadi": {
      "type": ["string", "null"],
      "description": "Container chunk ID if applicable"
    },
    "builder": {
      "type": "string",
      "description": "Builder identifier (e.g., cadi-builder-v1.0.0)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO8601 timestamp of build"
    },
    "host_id": {
      "type": "string",
      "description": "Build host identifier (e.g., github-actions-runner-42)"
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "version"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Tool name"
          },
          "version": {
            "type": "string",
            "description": "Tool version"
          },
          "hash": {
            "type": "string",
            "pattern": "^sha256:[a-f0-9]{64}$",
            "description": "Tool binary hash for verification"
          }
        }
      },
      "description": "Tools used in the build"
    },
    "environment_digest": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$",
      "description": "Hash of build environment configuration"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["step", "input", "output", "tool"],
        "properties": {
          "step": {
            "type": "string",
            "description": "Step name (e.g., compile_to_ir)"
          },
          "input": {
            "type": "string",
            "description": "Input chunk ID"
          },
          "output": {
            "type": "string",
            "description": "Output chunk ID"
          },
          "tool": {
            "type": "string",
            "description": "Tool used for this step"
          },
          "flags": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Flags passed to the tool"
          },
          "duration_ms": {
            "type": "integer",
            "minimum": 0,
            "description": "Step duration in milliseconds"
          },
          "cpu_seconds": {
            "type": "number",
            "minimum": 0,
            "description": "CPU time used"
          },
          "memory_peak_mb": {
            "type": "integer",
            "minimum": 0,
            "description": "Peak memory usage in MB"
          }
        }
      },
      "description": "Build steps executed"
    },
    "verification": {
      "type": "object",
      "properties": {
        "deterministic": {
          "type": "boolean",
          "description": "Whether build is deterministic"
        },
        "source_hash_matches": {
          "type": ["boolean", "null"],
          "description": "Whether source hash matches expected"
        },
        "ir_hash_matches": {
          "type": ["boolean", "null"],
          "description": "Whether IR hash matches expected"
        },
        "blob_hash_matches": {
          "type": ["boolean", "null"],
          "description": "Whether blob hash matches expected"
        }
      }
    },
    "signatures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["signer", "signature", "timestamp"],
        "properties": {
          "signer": {
            "type": "string",
            "description": "Signer identity"
          },
          "signature": {
            "type": "string",
            "description": "Base64-encoded signature"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Signature timestamp"
          },
          "algorithm": {
            "type": "string",
            "enum": ["ed25519", "ecdsa-p256", "rsa-4096"],
            "description": "Signature algorithm"
          }
        }
      },
      "description": "Cryptographic signatures"
    },
    "slsa_provenance": {
      "type": "object",
      "properties": {
        "build_type": {
          "type": "string",
          "description": "SLSA build type URI"
        },
        "builder": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "Builder identity"
            },
            "version": {
              "type": "string",
              "description": "Builder version"
            }
          }
        },
        "invocation": {
          "type": "object",
          "properties": {
            "config_source": {
              "type": "object",
              "properties": {
                "uri": {
                  "type": "string",
                  "format": "uri",
                  "description": "Config source URI"
                },
                "digest": {
                  "type": "string",
                  "description": "Config digest"
                }
              }
            },
            "parameters": {
              "type": "object",
              "description": "Build parameters"
            },
            "environment": {
              "type": "object",
              "description": "Build environment"
            }
          }
        },
        "materials": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "uri": {
                "type": "string",
                "description": "Material URI"
              },
              "digest": {
                "type": "string",
                "description": "Material digest"
              }
            }
          },
          "description": "Input materials"
        },
        "metadata": {
          "type": "object",
          "properties": {
            "build_started_on": {
              "type": "string",
              "format": "date-time"
            },
            "build_finished_on": {
              "type": "string",
              "format": "date-time"
            },
            "reproducible": {
              "type": "boolean"
            }
          }
        }
      },
      "description": "SLSA provenance metadata"
    }
  }
}
