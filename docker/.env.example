# =============================================================================
# CADI Docker Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your environment

# -----------------------------------------------------------------------------
# General
# -----------------------------------------------------------------------------
CADI_VERSION=latest
RUST_LOG=info

# -----------------------------------------------------------------------------
# Registry Server
# -----------------------------------------------------------------------------
CADI_PORT=8080
CADI_MAX_CHUNK_SIZE=104857600

# -----------------------------------------------------------------------------
# MCP Server
# -----------------------------------------------------------------------------
CADI_MCP_PORT=9090

# -----------------------------------------------------------------------------
# PostgreSQL (full profile)
# -----------------------------------------------------------------------------
POSTGRES_USER=cadi
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=cadi

# -----------------------------------------------------------------------------
# Redis (full profile)
# -----------------------------------------------------------------------------
# No additional config needed

# -----------------------------------------------------------------------------
# MinIO (full profile)
# -----------------------------------------------------------------------------
MINIO_USER=cadi
MINIO_PASSWORD=change_me_in_production
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# -----------------------------------------------------------------------------
# Development
# -----------------------------------------------------------------------------
PROJECT_PATH=./examples
SSH_AUTH_SOCK=/run/host-services/ssh-auth.sock
